<main>
    {{#if isLoading}}
        <div class="pre-loader">
            Loading...
        </div>
    {{else}}
        <div class="profile-page">

            <div class="profile-wrapper">
                {{{avatar}}}
                {{{fieldName}}}
                {{{fieldEmail}}}
                {{{fieldLogin}}}
                {{{fieldFirstName}}}
                {{{fieldSecondName}}}
                {{{fieldDisplayName}}}
                {{{fieldDisplayName}}}
                {{{fieldPhone}}}
                {{{editDataButton}}}
                {{{editPasswordButton}}}
                {{{logoutButton}}}
            </div>

            {{{backInChats}}}
        </div>
    {{/if}}
</main>
